<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <.base endpoint={Dashboard.Endpoint} />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default={Scouter.name()}>
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={static_url(@conn, "/assets/dashboard.css")} />
    <link phx-track-static rel="stylesheet" href={static_url(@conn, "/css/meter.css")} />
    <link phx-track-static rel="stylesheet" href={static_url(@conn, "/css/inputs.css")} />
    <script phx-track-static defer src={static_url(@conn, "/js/phoenix_html.js")}>
    </script>
    <.import_map conn={@conn} />
    <script phx-track-static defer type="module" src={static_url(@conn, "/js/dashboard.js")}>
    </script>

    <.development_scripts conn={@conn} />

    <.stylesheets headers={@conn.req_headers} />
  </head>
  <body class="font-mono text-sm bg-zinc-100/30">
    {@inner_content}
  </body>
</html>
