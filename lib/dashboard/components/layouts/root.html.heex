<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <.base endpoint={Dashboard.Endpoint} />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default={Scouter.name()}>
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={url(~p"/assets/dashboard.css")} />
    <link phx-track-static rel="stylesheet" href={url(~p"/css/meter.css")} />
    <link phx-track-static rel="stylesheet" href={url(~p"/css/inputs.css")} />
    <script defer phx-track-static type="text/javascript" src={url(~p"/assets/dashboard.js")}>
    </script>
    <.import_map />
    <script phx-track-static defer type="module" src={url(~p"/js/dashboard.js")}>
    </script>
    <.stylesheets headers={@conn.req_headers} />
  </head>
  <body class="font-mono text-sm bg-zinc-100/30">
    {@inner_content}
  </body>
</html>
